<h1>Sign up</h1>

<div class="sign-up-container">
<%= image_tag "biltong_example", class: "sign-up-img" %>
<%= form_with model: @user, url: sign_up_path do |form| %>
  <%= render "shared/form_errors", form: form %>
  <div class="form-group">
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, placeholder: "This can be a nickname if you like.", class: "form-field" %>
  </div>
  <div class="form-group">
    <%= form.label :address, class: "form-label" %>
    <%= form.text_area :address, placeholder: "Not required when you sign up, but will be needed when you make and order.", class: "text-field" %>
  </div>
  <div class="form-group">
    <%= form.label :phone_number, class: "form-label" %>
    <%= form.text_field :phone_number, placeholder: "Not required if you want us to contact via email.", class: "form-field" %>
  </div>
  <div class="form-group">
    <%= form.label :email, class: "form-label" %>
    <%= form.text_field :email, placeholder: "So we can contact you.", class: "form-field" %>
  </div>
  <div class="form-group">
    <%= form.label :password, class: "form-label" %>
    <%= form.password_field :password, placeholder: "Must be 5 characters or more.", class: "form-field" %>
  </div>
  <div class="form-group">
    <%= form.label :password_confirmation, class: "form-label" %>
    <%= form.password_field :password_confirmation, placeholder: "Must match your password.", class: "form-field" %>
  </div>
  <div>
    <%= form.submit "Sign up", class: "button" %>
  </div>
<% end %>
</div>